<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project  if policy(project).show? %></td>
        <td><%= link_to 'Edit', edit_project_path(project) if policy(project).edit? %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if policy(project).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(Project).new? %>
  <%= link_to 'New Project', new_project_path %>
<% end %>
<div class="form-group col-md-6 col-sm-6" style="display: inline-block; margin-top: 20px;  border: 1px solid grey; padding: 20px;" >
	<h2 style="text-align: center; margin: 1px auto;">Add new  bug</h2>
	<%= form_with(model: [@project, @project.bugs.build], remote: true)  do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title  %>
	</p>
	<p>
		<%= form.label :deadline %><br>
		<%= form.date_field :deadline %>
	</p>

	<p>
		<%= form.label :picture %><br>
		<%= form.file_field :picture, accept: '.png' %>
	</p>

	<p>
		<%= form.label :bug_type %><br>
		<%= form.select :bug_type, ['bug','feature'] %>
	</p>

	<p id="type_bug" style="display: none;">
		<%= form.label :bug_status %><br>
		<%= form.select :bug_status, ['new' ,'started', 'resolved'] %>
	</p>

	<p id = "type_feature" >
		<%= form.label :bug_status %><br>
		<%= form.select :bug_status, ['new' ,'started', 'completed'] %>
	</p>

	<%= form.hidden_field :user_id, value: current_user.id %>

	<div class="action">
		<%= form.submit %>
	</div>
	<div class="action">
		<p><%= link_to 'Back', "javascript:void(0)" , id:"bug-link", class: "btn btn-default", style: "margin-top: 4px;" %></p>
	</div>

	<%end%>
</div>